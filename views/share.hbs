<!DOCTYPE html>
<html lang="en">
<head>    
  <meta charset="utf-8"/>
  <title>New</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css"/>
</head>
<body>
  <nav>
    <h4>Home</h4>
    <ul class="nav">
        <li><a href="/home">Home</a></li>
        <li><a href="/myproj">My Projects</a></li>
        <li><a href="/shared">Shared</a></li>
        <li><a href="/logout">Logout</a></li>
    </ul>
  </nav>
  {{#if project}}
    <button type="button" class="login-button" onclick='history.back()'>Back</button>
      <form class="form" action="/share/project" method="POST">
        <h1 class="login-title">Add User</h1>
        <input type="text" class="login-input" id="email" placeholder="Email" name="email" required>
        <h1 class="login-title">{{message}}</h1>
        <button type="submit" class="login-button">Submit</button>
    </form>
    <div id="shared">

    </div>
    <script>
      var text = "{{project}}"; //Get project
      var text = text.replace(/&quot;/g, '\"'); //Replace quote marks
      var obj = JSON.parse(text); //Parse to JSON 
      const container = document.getElementById('shared');
      function project(i){
        const form = document.createElement('form');
        form.setAttribute("class","form");
        form.setAttribute("method","POST");
        form.setAttribute("action","/delete/sharedproj");
        form.innerHTML = `
            <input type="hidden" id="ID" name="ID">
            <h1 id="title" class="login-title"></h1>
            <input type="submit" value="Delete" name="type" class="login-button">
        `;
        container.appendChild(form);
        document.getElementById("ID").setAttribute("value", obj[i].user_id);
        document.getElementById("ID").setAttribute("id", obj[i].user_id);
        document.getElementById("title").setAttribute("id", "name"+i);
        document.getElementById("name"+i).innerHTML = obj[i].name;
      }
      for(let i = 0; i < obj.length; i++) {
        project(i);
      }
    </script>
  {{/if}}
